@page
@model LoginModel

@{
    ViewData["Title"] = "Account Log in";
}

    <h3>@ViewData["Title"] &#128100;</h3>
            <link href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />
       <section>
           <div class="row d-flex justify-content-center col-12" style="background-color:lightgray;">
               <div class="col-4 border border-pimary rounded m-20">
                   <form id="account" method="post" class="py-5">
                       <div>
                           <h1 class="logo-name" style="text-align:center;color:darkgray;">IN+</h1>
                       </div>

                       <div class="d-flex justify-content-center">
                           <h5>&nbsp;&nbsp;Welcome to IN+</h5>

                           <div asp-validation-summary="All" class="text-danger"></div>
                       </div>
                       <div class="form-group">
                           <p style="text-align:center;color:gray;"><small>
                             Perfectly designed and precisely prepared admin
                             theme with over 50 pages with extra new web
                             app views.</small>
                           </p>

                           <p style="text-align:center;color:gray;"><small>Login in. To see it in action.</small></p>

                           <input asp-for="Input.Email" class="form-control" placeholder="Username" required autofocus />
                           <span asp-validation-for="Input.Email" class="text-danger"></span>
                       </div>
                       <div class="form-group">
                           <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                           <span asp-validation-for="Input.Password" class="text-danger"></span>
                       </div>
                       <div class="form-group">
                           <div class="checkbox">
                               <label asp-for="Input.RememberMe">
                                   <input asp-for="Input.RememberMe" />
                                   @Html.DisplayNameFor(m => m.Input.RememberMe)
                               </label>
                           </div>
                       </div>
                       <div class="form-group">
                           <button type="submit" class="btn btn-lg btn-success btn-block">Log in</button>
                       </div>
                       <p class="col-12">
                           <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                           <br />
                           <small style="color:gray;">Do not have an account?</small>
                       </p>
                       <button type="button" class="btn-block" style="display:block; width:100%; border:none;
                    background-color:white; color:black; padding:14px 28px; font-size:16px; cursor:pointer; text-align:center;">Create an account</button>

                   </form>
               </div>
               <div class="row col-12">
                  
                   <p class="col-12" style="text-align:center; color:gray;">
                       <smalll>Inspinia we app framework base on Bootstrap 3 &#169; 2014</smalll>
                   </p>
                   
                </div>
           </div>
       </section>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
